            .success(function(data){
                var dt = JSON.parse(data);
                if(dt.meta.code == 200){
                    alert(dt.meta.confirm);   
                }
                else{
                    var m_error = dt.meta.error_message;
                    if(m_error.length > 0){
                        var error = m_error.join(",");
                    }
                    else {
                        var error = m_error;
                    }
                    alert(error);
                }
                $('#signup-proc').removeClass('fa fa-refresh fa-spin');
            });
            return false;
        })
        //recommended book
        book.json({
            url : base_url+"/books/global_recommended?client_id="+client+"&limit=10",
