        }).success(function(data){
            var html = "";
            $.each(data.data,function(){
                html += '<li class="book-shadow"  id="btn-book" class="btn btn-lg btn-danger" data-toggle="popover" title="" data-content="'+this.Book.authors+'" data-trigger="hover" data-html="true" data-original-title="'+this.Book.title+'" onclick="book.desc(\'1\')"><img src="'+this.Book.cover+'" alt=""></li>';
