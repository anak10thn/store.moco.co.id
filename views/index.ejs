<div class="container">
    <div class="row">
        <div class="col-md-4">
            <h3 class="title-slide">REKOMENDASI</h3>
        </div>
    </div>
      <div class="row">
        <div class="col-md-12">
            <div id="slider1" class="slider">
                <ul id="recommended">
                    <li class="book-shadow"><img src="" alt=""></li>
                </ul>
            </div>
            <div class="bkn bkn-prev" onclick="book.prev('#slider1')"></div>
            <div class="bkn bkn-next" onclick="book.next('#slider1')"></div>
            <hr style="margin-bottom:0px">
      </div>
    </div>
    
    <div class="row">
        <div class="col-md-4">
            <h3 class="title-slide">POPULER</h3>
