<script>
    $(document).ready(function(){
        //recommended book
        book.json({
            url : base_url+"/books/global_recommended?client_id="+client+"&limit=10",
            type : "GET",
            dataType : "json"
        }).success(function(data){
            var html = "";
            $.each(data.data,function(){
                html += '<li class="book-shadow"><img src="'+this.Book.cover+'" alt=""></li>';
            });
            $('#recommended').html(html);
            book.slider('div#slider1');
        });
        
        //popular
        book.json({
            url : base_url+"/books/global_recommended?client_id="+client+"&limit=10",
            type : "GET",
            dataType : "json"
        }).success(function(data){
            var html = "";
            $.each(data.data,function(){
                html += '<li class="book-shadow"><img src="'+this.Book.cover+'" alt=""></li>';
            });
            $('#popular').html(html);
            book.slider('div#slider2');
        });
        
        //newbook
        book.json({
            url : base_url+"/books/newbooks?client_id="+client+"&limit=10",
            type : "GET",
            dataType : "json"
        }).success(function(data){
            var html = "";
            $.each(data.data,function(){
                html += '<li class="book-shadow"><img src="'+this.Book.cover+'" alt=""></li>';
            });
            $('#newbook').html(html);
            book.slider('div#slider3');
        });
    }); 
</script>
