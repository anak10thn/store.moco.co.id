    var options = {
        placement: function (context, source) {
            var position = $(source).position();
    
            if (position.left > 515) {
                return "left";
            }
    
            if (position.left < 515) {
                return "right";
            }
    
            if (position.top < 110){
                return "bottom";
            }
    
            return "top";
        }
    };
    $('.book-shadow').popover(options);
});
</script>

